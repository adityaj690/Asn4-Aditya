<!DOCTYPE html>
<html>
<head>
    <title>Invoices</title>
    <style>

        img{
            width: 50px;
            height: 50px;
        }
    </style>
</head>
<body>
    <h1>Invoices</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Author</th>
                <th>Image</th>
                <th>Inventory</th>
                <th>category</th>
                <th>Price_in_thousand</th>
                <th>manufacturer</th>
            </tr>
        </thead>
        <tbody>
            {{#each invoices}}
                <tr>
                    <td>{{this.ISBN}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td><img src="{{this.img}}" alt="Image"></td>
                    <td>{{this.inventory}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.Price_in_thousand}}</td>
                    <td>{{this.manufacturer}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
